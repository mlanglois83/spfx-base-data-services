{
    "compilerOptions": {
        "target": "ES2019",
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "inlineSources": false,
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "typeRoots": [
          "./node_modules/@types",
          "./node_modules/@microsoft"
        ],
        "lib": [
          "ES2015",
          "dom",
          "ES2017.Object"
        ]
      },
      "include": [
        "src/**/*.ts"
      ],
      "exclude": [
        "node_modules",
        "dist"
      ]
}